#include<iostream>
using namespace std;
//array is fixed size collection of elements of the same data type, stored in contigious memory
//indexing starts from 0
//memory is statically allocated at compile time
//array are passed to functions bt reference b default
//this means the funtion receives the address of the first element of the array, not a full copy
// void fun1(int arr[]){  }
// void fun1(int *arr[]){ }

void printArray(int arr[], int size)
{
    for(int i = 0; i < size; i++)
    {
        cout<<arr[i]<<" ";
    }
}

int main()
{
    int number[] = {10, 20, 30, 40, 50};
    int size = 5;
    printArray(number, size);
    return 0;
}